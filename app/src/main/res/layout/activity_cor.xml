<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.koitim.cores.CorActivity">

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:id="@+id/cor_seek_vermelho"
        android:max="255" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cor_seek_vermelho"
        android:layout_alignStart="@+id/cor_seek_vermelho"
        android:layout_marginTop="120dp"
        android:id="@+id/cor_seek_verde"
        android:max="255" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cor_seek_verde"
        android:layout_alignStart="@+id/cor_seek_verde"
        android:layout_marginTop="124dp"
        android:id="@+id/cor_seek_azul"
        android:max="255" />

    <TextView
        android:text="Vermelho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cor_seek_verde"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Verde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cor_seek_azul"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cor_seek_azul"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/textView3" />

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cor_seek_azul"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp"
        android:id="@+id/cor_voltar"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
